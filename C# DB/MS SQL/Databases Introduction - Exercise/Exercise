--Update Stuart's age

UPDATE [dbo.Minions]
  SET [Age] = 10
  WHERE [Name] = 'Stuart';
  
  
--Update All Records (Increase every minion's age by 1)

UPDATE [dbo.Minions]
SET [Age] = [Age] + 1;

--Delete Record

DELETE FROM [dbo.Minions] WHERE [Name]='Bob';

--Create New Table

CREATE TABLE [Towns] 
(
		[Id] INT IDENTITY NOT NULL PRIMARY KEY,
		[Name] NVARCHAR(200) NOT NULL
)
